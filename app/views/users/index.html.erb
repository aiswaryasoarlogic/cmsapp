<script type = "text/javascript">     
    event.preventDefault();
</script>
<div class="container register">
    <div class="row">
        <div class="col-md-3 register-left">
            <img src="https://image.ibb.co/n7oTvU/logo_white.png" alt=""/>
            <h3>Welcome</h3>
            <p>This is my first Ruby on Rails App!</p>
        </div>
        <div class="col-md-9 register-right">
        <ul class="nav nav-tabs nav-justified" id="myTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Sign Up</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Sign In</a>
        </li>
    </ul>
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    <h3 class="register-heading">Registration</h3>
                    <form action="/users" enctype="multipart/form-data" method = "POST" class="row register-form">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
                                <input type="text" class="form-control" name="user[name]" placeholder="Your Full Name *" required value="" />
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="user[profession]" placeholder="Your Profession *" required value="" />
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" name="user[password]" placeholder="Password *" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required value="" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="email" class="form-control" name="user[email]" placeholder="Your Email *" size="30" required value="" />
                            </div></br>
                            <div class="form-group">
                                <input type="text" minlength="10" maxlength="10" name="user[phone]"  class="form-control" placeholder="Your Phone *" required value="" />
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" name="user[password_confirmation]" placeholder="Confirm Password *" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required value="" />
                            </div>
                            <input type="submit" class="btnRegister"  value="Register"/>
                        </div>
                    </form>
                </div>
                <div class="tab-pane fade show" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                    <h3  class="register-heading">Sign In</h3>
                    <form action="/sessions" method = "POST" class="row register-form">
                        <div class="col-md-12">
                            <div class="form-group">
                                <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
                                <input type="email" class="form-control" placeholder="Email *" size="30" name="login[email]" required value="" />
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" placeholder="Password *" name="login[password]" required value="" />
                                
                            </div>

                            <div>
                                <a href="/password/reset">Forgot your password?</a>
                                <% link_to "Forgot your password?", password_reset_path %>
                            </div>
                            <div class="form-group">
                                <input type="submit" class="btnRegister"  value="Sign In"/>
                            </div>
                            <% if flash[:login_errors] %>
                                <% flash[:login_errors].each do | error| %>
                                    <p><%=error %>
                                    <p>
                                    <% end %>
                            <% end %>
                            
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>